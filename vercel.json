{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 1800
    }
  },
  "routes": [
    {
      "src": "/api/surat",
      "dest": "/api/surat",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, Accept, Content-Length"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
} 